{
  "extends": ["//"],
  "tasks": {
    "build": {
      "cache": true,
      "outputs": ["dist/**"],
      "dependsOn": ["lint"]
    },
    "lint": {
      "cache": false
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    }
  }
}
