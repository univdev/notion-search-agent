{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "notion-search-agent",
  "version": "0.0.1",
  "identifier": "com.github.univdev.notion-search-agent",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Notion Search Agent",
        "width": 400,
        "height": 650,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"]
  }
}
